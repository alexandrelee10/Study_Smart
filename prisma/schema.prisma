generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

enum CourseType {
  MATHlee123
  
  READING
  ENGLISH
  SCIENCE
  HISTORY
  COMPUTER_SCIENCE
  NURSING
  SOCIAL_MEDIA
  OTHER
}

enum EducationLevel {
  MIDDLE_SCHOOL
  HIGH_SCHOOL
  COLLEGE
  OTHER
}

enum AssignmentStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum CalendarEventType {
  STUDY
  CLASS
  ASSIGNMENT
  EXAM
  MEETING
  REMINDER
  OTHER
}

enum CalendarEventStatus {
  CONFIRMED
  TENTATIVE
  CANCELED
}

enum RecurrenceFrequency {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}

model User {
  id            String   @id @default(cuid())
  username      String   @unique
  firstName     String
  lastName      String
  dob           DateTime?
  email         String   @unique
  emailVerified DateTime?
  password      String
  phoneNumber   String?
  image         String?

  role          Role     @default(STUDENT)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  enrollments    Enrollment[]
  studySessions  StudySession[]
  assignments    Assignment[]     @relation("AssignedToUser")
  goals          StudyGoal[]
  calendarEvents CalendarEvent[]

  dailyProgresses DailyProgress[]
}

model Course {
  id        String         @id @default(cuid())
  name      String
  code      String         // "CAP3103"
  image     String?
  type      CourseType     @default(OTHER)
  edLevel   EducationLevel @default(OTHER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  enrollments    Enrollment[]
  assignments    Assignment[]
  studySessions  StudySession[]
  goals          StudyGoal[]
  calendarEvents CalendarEvent[]

  dailyProgresses DailyProgress[]
}

/// lets a User have many Courses and a Course have many Users
model Enrollment {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
}
/// Assignments
model Assignment {
  id           String           @id @default(cuid())
  title        String
  description  String?
  dueDate      DateTime?
  status       AssignmentStatus @default(TODO)

  // Relations
  courseId     String
  assignedToId String? // optional: assignment can be assigned to a specific user

  course      Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  assignedTo  User?  @relation("AssignedToUser", fields: [assignedToId], references: [id], onDelete: SetNull)

  // Optional back-reference to calendar events tied to this assignment
  calendarEvents CalendarEvent[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([courseId])
  @@index([assignedToId])
  @@index([dueDate])
}
/// Study Session 
model StudySession {
  id        String   @id @default(cuid())
  userId    String
  courseId  String?  // optional: sometimes you study without selecting a course
  startedAt DateTime @default(now())
  endedAt   DateTime?
  minutes   Int?     // optional; you can compute from started/ended or store directly
  notes     String?

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course? @relation(fields: [courseId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([courseId])
  @@index([startedAt])
}
/// Goals
model StudyGoal {
  id                   String   @id @default(cuid())
  userId               String
  courseId             String?

  // Example goal fields
  targetMinutesPerWeek Int
  startsOn             DateTime?
  endsOn               DateTime?

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course? @relation(fields: [courseId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([courseId])
}
/// Calendar
model CalendarEvent {
  id          String               @id @default(cuid())
  userId      String

  title       String
  description String?
  location    String?

  type        CalendarEventType    @default(OTHER)
  status      CalendarEventStatus  @default(CONFIRMED)

  startAt     DateTime
  endAt       DateTime?
  allDay      Boolean              @default(false)

  // Optional linkage into your existing models
  courseId     String?
  assignmentId String?

  // Recurrence (simple + practical)
  isRecurring  Boolean             @default(false)
  recurrence   CalendarRecurrence?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  course     Course?     @relation(fields: [courseId], references: [id], onDelete: SetNull)
  assignment Assignment? @relation(fields: [assignmentId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([courseId])
  @@index([assignmentId])
  @@index([startAt])
}

model CalendarRecurrence {
  id        String @id @default(cuid())

  // One-to-one with CalendarEvent
  eventId   String @unique
  event     CalendarEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)

  frequency RecurrenceFrequency
  interval  Int      @default(1) // every 1 week, every 2 weeks, etc.

  // Use integers (0-6) for days of week: 0=Sun ... 6=Sat
  byWeekday Int[]    // typically used for WEEKLY patterns; leave empty otherwise

  // Optional end condition
  until     DateTime?
  count     Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DailyProgress {
  id        String   @id @default(cuid())
  userId    String
  courseId  String?
  date      DateTime // store at midnight
  minutes   Int      @default(0)
  sessions  Int      @default(0)

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course? @relation(fields: [courseId], references: [id], onDelete: SetNull)

  @@unique([userId, courseId, date])
  @@index([userId, date])
  @@index([courseId, date])
}
